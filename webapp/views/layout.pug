doctype html
html
  // -Variables to set active page in sidebar
  block variables
    -var activePage = 'myloans'

  head
    title= title
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    // Bootstrap
    link(rel='stylesheet', href='/bootstrap/css/bootstrap.css')
